  "author": "Artem Zakharchenko <kettanaito@gmail.com>",
  "license": "MIT",
  "repository": {
    "url": "https://github.com/kettanaito/rettime"
  },
  "devDependencies": {
    "@ossjs/release": "^0.10.0",
    "@rolldown/binding-darwin-arm64": "1.0.0-beta.40",
    "tsdown": "^0.19.0",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  }
}